{
  "name": "christmas-game-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "node --watch src/server.js",
    "start": "node src/server.js",
    "migrate": "node src/db/migrations.js",
    "seed": "node src/db/seed.js",
    "seed-answers": "node src/db/seed-answers.js",
    "add-test-day": "node src/db/add-test-day.js",
